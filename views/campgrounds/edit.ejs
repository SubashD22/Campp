<% layout('/layout/boilerplate') %> 
    
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" novalidate class="validate-form">
            
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input class="form-control" type="text" id="title" placeholder="<%= campground.title %>" name="campground[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" placeholder="<%= campground.location %>" name="campground[location]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image url:</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="text" class="form-control" id="price" placeholder="<%= campground.price %>" aria-label="price" aria-describedby="basic-addon1" name="campground[price]" required>
                      </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" type="text" id="description" placeholder="<%= campground.description %>" name="campground[description]" required></textarea>
                </div>
                  
                <button class="btn btn-success mb-3">Save Changes</button>
            </form>
            <div ><a  href="/campgrounds/<%= campground._id %> ">Back</a></div>
            
            
        </div>
    
    </div>
        
